@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor;
@model dynamic;

@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Mito" asp-action="Create">Créer Mito</a>

<table class="table">
    <thead>
        <tr>
            <th>Mito</th>
            <th>Categorie</th>
            <th>Auteur</th>
            <th>Edition</th>
            <th>Suppression</th>
        </tr>
    </thead>
    <tbody>
        @foreach (MarmitoAPI.Models.Mito mito in Model.Mitos)
        {
            <tr class="mito" id="@mito.Id">
                <td>@Html.DisplayFor(item => mito.Content)</td>
                @if (mito.Category == MarmitoAPI.Models.Mito.CategoryList.INDISP)
                {
                    <td>Indisponible</td>
                }
                else if (mito.Category == MarmitoAPI.Models.Mito.CategoryList.FAMILY)
                {
                    <td>Famille</td>
                }
                else if (mito.Category == MarmitoAPI.Models.Mito.CategoryList.WORK)
                {
                    <td>Travail</td>
                }
                else if (mito.Category == MarmitoAPI.Models.Mito.CategoryList.LOVE)
                {
                    <td>Amour</td>
                }
                else
                {
                    <td>Autres</td>
                }

                @{
                    List<MarmitoAPI.Models.User> users = Model.Users;
                    var user = users.Find(u => u.Id == mito.AuthorId);
                    var userName = "Auteur inconnu";
                    if (user != null)
                    {
                        userName = user.Name;
                    }
                }
                <td>@userName</td>

                @if (httpContextAccessor.HttpContext.Request.Cookies.ContainsKey("Id"))
                {
                    if (mito.AuthorId.ToString() == httpContextAccessor.HttpContext.Request.Cookies["Id"])
                    {
                        <td><li><a asp-area="" asp-controller="Mito" asp-action="Update" asp-route-id="@mito.Id">Éditer</a></li></td>
                        <td><li><a asp-area="" asp-controller="Mito" asp-action="Remove" asp-route-id="@mito.Id">Suppression</a></li></td>
                    }
                }

            </tr>
        }
    </tbody>

</table>